.pro-img-upload {
  width: 200px;
  height: 200px;
  position: relative;
  border: 1px solid #d2d6de;
  overflow: hidden;
  display: inline-block;
  *display: inline;
  *zoom: 1;
}

.pro-img-upload input[type="file"] {
  position: absolute;
  right: 0;
  top: 0;
  font-size: 999px;
  opacity: 0;
  filter: alpha(opacity=0);
  cursor: pointer;
}

.pro-img-upload img {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: auto;
  height: auto;
  max-height: 100%;
  margin: auto;
}

.pro-img-upload button {
  position: absolute;
  right: 0;
  top: 0;
  outline: 0;
  font-size: 20px;
}

.pro-img-upload .pro-img-upload-preview {
  display: block;
  width: 100%;
  height: 100%;
  position: relative;
}

.pro-img-upload .pro-img-upload-label {
  position: absolute;
  right: 0;
  bottom: 0;
  padding: 5px 10px;
}

.product-config-form-inline .form-control {
  min-width: 120px;
}

.product-config-form-inline .form-group + .form-group {
  margin-left: 10px;
}

.pro-btn,
.pro-btn-edit,
.pro-btn-expand {
  background: transparent;
  border: 0;
  outline: 0;
}

.pro-btn-expand {
  background-color: #1dbee2;
  color: #fff;
  width: 22px;
  height: 22px;
}

.level-2 {
  padding-left: 2em;
}

.level-3 {
  padding-left: 4em;
}

.pro-prop-dialog .modal-dialog {
  width: 90%;
}

.pro-prop-dialog .list-group {
  height: 400px;
  overflow-y: auto;
}

.product-prev__info div {
  padding: 5px 0;
}

.product-prev__price {
  border-style: solid;
  border-width: 1px 0;
}

.product-prev__info,
.product-prev__details {
  height: 580px;
  overflow-y: auto;
}

.product-prev-dialog .modal-dialog {
  width: 400px;
}

.product-prev-dialog .modal-body {
  height: 480px;
  overflow-y: auto;
}

.product-prev-dialog .product-prev__info {
  height: auto;
}
